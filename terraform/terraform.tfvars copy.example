# Example Terraform variables file
# Copy this to terraform.tfvars and update with your actual values

# UptimeRobot API key (get from https://uptimerobot.com/dashboard/settings/)
# uptimerobot_api_key = "ur123456-abcdef123456789abcdef123456789ab"

# Environment
environment = "prod"

# Default monitoring interval (in seconds)
# Free accounts are limited to 300 seconds (5 minutes)
# Paid accounts can use: 60, 120, 300, 600, 900, 1800, 3600
default_monitor_interval = 300

# Alert contact emails (must match friendly names in UptimeRobot)
alert_contact_emails = [
  "admin@example.com",
  "alerts@example.com"
]

# Domains to monitor
domains_to_monitor = {
  "example-com" = {
    name         = "DomainVault - example.com"
    url          = "https://example.com"
    monitor_type = "http"
    interval     = 300
    enabled      = true
    ssl_check    = true
  }
  
  "api-example-com" = {
    name         = "DomainVault - API example.com"
    url          = "https://api.example.com/health"
    monitor_type = "http"
    interval     = 300
    enabled      = true
    ssl_check    = true
  }
  
  "blog-example-com" = {
    name         = "DomainVault - blog.example.com"
    url          = "https://blog.example.com"
    monitor_type = "keyword"
    keyword      = "Welcome"
    keyword_type = "exists"
    interval     = 600
    enabled      = true
    ssl_check    = true
  }
  
  "ping-example-com" = {
    name         = "DomainVault - Ping example.com"
    url          = "example.com"
    monitor_type = "ping"
    interval     = 300
    enabled      = true
    ssl_check    = false
  }
}

# Maintenance windows (optional)
maintenance_windows = {
  "weekly_maintenance" = {
    friendly_name = "Weekly Maintenance"
    type         = 1  # Weekly
    value        = "2" # Sunday (0=Sunday, 1=Monday, etc.)
    start_time   = "02:00"
    duration     = 120 # 2 hours
  }
}

# Notification groups
notification_groups = {
  critical = {
    name = "Critical Production Domains"
    alert_contacts = ["admin@example.com"]
    description = "High priority domains requiring immediate attention"
  }
  
  standard = {
    name = "Standard Domains"
    alert_contacts = ["alerts@example.com"]
    description = "Regular monitoring domains"
  }
}

# SSL monitoring
auto_ssl_monitoring = true

# Thresholds
response_time_threshold = 5000  # 5 seconds
uptime_threshold = 99.5         # 99.5%
